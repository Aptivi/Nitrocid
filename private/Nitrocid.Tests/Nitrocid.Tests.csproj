      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="TestData\TestVerifySHA256.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="TestData\TestVerifySHA256KS.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
